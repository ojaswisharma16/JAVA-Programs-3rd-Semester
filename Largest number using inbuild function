import java.util.*;

public class java_06 {

    public static void main(String args[]) {

        Scanner input = new Scanner(System.in);
        System.out.println("Enter the first number :");
        int a = input.nextInt();

        System.out.println("Enter the second number :");
        int b = input.nextInt();

        System.out.println("Enter the third number :");
        int c = input.nextInt();

        int d = Math.max(a, b); // Comparing a and b & storing the larreer number in d

        int e = Math.max(d, c); // Comparing d and c & storing the larreer number in e

        // The largest number get stored in e

        if(a==b && a==c){
            System.out.println("All the three numbers are equal");

        }
        else{
            System.out.println(e+" is the largest number");
        }

    }

}
